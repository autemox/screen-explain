{
  "name": "screen-explain",
  "version": "1.0.0",
  "description": "Desktop app for OCR and text analysis",
  "main": "dist/Main.js",
  "scripts": {
    "start": "tsc && electron .",
    "build": "tsc",
    "watch": "tsc -w",
    "package-win": "npm run build && electron-builder build --win",
    "package-mac": "npm run build && electron-builder build --mac",
    "package": "npm run build && electron-builder build"
  },
  "build": {
    "appId": "com.screenexplain.app",
    "productName": "Screen Explain",
    "files": [
      "dist/**/*",
      "src/html/**/*",
      "package.json",
      ".env"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "portable": {
      "artifactName": "${productName}-portable.${ext}"
    }
  },
  "dependencies": {
    "@google-cloud/vision": "^4.3.2",
    "dotenv": "^16.4.7",
    "electron-store": "^10.0.0",
    "openai": "^4.77.0",
    "tesseract.js": "^5.1.1"
  },
  "devDependencies": {
    "@types/electron-store": "^3.2.2",
    "@types/node": "^20.17.10",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.0.0"
  }
}
